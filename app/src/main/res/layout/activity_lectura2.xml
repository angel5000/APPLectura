<?xml version="1.0" encoding="utf-8"?>

<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#000000"
    android:backgroundTint="#000000"
    tools:context=".Lectura.LecturaActivity">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="?attr/colorPrimary"
        android:elevation="4dp"
        android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar"
        app:title="Lectura"
        tools:ignore="MissingConstraints" />

    <LinearLayout
        android:layout_width="409dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="1dp"
        android:layout_marginTop="1dp"
        android:layout_marginEnd="1dp"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="58sp"
            android:orientation="vertical" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">


            <ScrollView
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="400dp"
                    android:orientation="vertical">


                    <androidx.cardview.widget.CardView
                        android:layout_width="match_parent"
                        android:layout_height="200dp"
                        android:layout_gravity="center"
                        app:cardCornerRadius="10dp">

                        <LinearLayout
                            android:layout_width="380dp"
                            android:layout_height="match_parent"
                            android:layout_marginLeft="15dp"
                            android:gravity="center"
                            android:orientation="vertical">

                            <FrameLayout
                                android:layout_width="380dp"
                                android:layout_height="match_parent">

                                <ImageView
                                    android:id="@+id/imagePortada"
                                    android:layout_width="380dp"
                                    android:layout_height="wrap_content"
                                    app:srcCompat="@mipmap/img"
                                    tools:srcCompat="@mipmap/img" />

                                <TextView
                                    android:id="@+id/txtnomblect"
                                    android:layout_width="wrap_content"
                                    android:layout_height="48dp"
                                    android:layout_marginLeft="20dp"
                                    android:layout_marginTop="155dp"
                                    android:gravity="center"
                                    android:text="Nombre Lectura"
                                    android:textColor="@color/white"
                                    android:textColorHint="@color/black"
                                    android:textColorLink="@color/black"
                                    android:textSize="20sp" />
                            </FrameLayout>
                        </LinearLayout>
                    </androidx.cardview.widget.CardView>

                    <androidx.cardview.widget.CardView
                        android:layout_width="380dp"
                        android:layout_height="200dp"
                        android:layout_gravity="center"
                        android:layout_marginTop="25dp"
                        android:backgroundTint="#03A9F4"
                        app:cardCornerRadius="20dp">

                        <TextView
                            android:id="@+id/textView3"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="20dp"
                            android:layout_marginTop="20dp"
                            android:text="Sinopsis"
                            android:textColor="@color/white"
                            android:textSize="24sp" />

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="100dp"
                            android:layout_marginLeft="20dp"
                            android:layout_marginTop="65dp"
                            android:background="#9C27B0"
                            android:backgroundTint="#00501414"
                            android:isScrollContainer="true"
                            android:orientation="vertical">

                            <TextView
                                android:id="@+id/textdescrip"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Sinopsis de la historia"
                                android:textColor="@color/white" />

                        </LinearLayout>

                    </androidx.cardview.widget.CardView>


                    <androidx.cardview.widget.CardView
                        android:layout_width="380dp"
                        android:layout_height="65dp"
                        android:layout_gravity="bottom|center|center_vertical"
                        android:layout_marginTop="25dp"
                        android:background="#673AB7"
                        android:backgroundTint="#52673AB7"
                        app:cardCornerRadius="10dp">


                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="45dp"
                            android:layout_marginTop="13dp"
                            android:gravity="center"
                            android:orientation="vertical">


                            <Button
                                android:id="@+id/button"
                                android:layout_width="100dp"
                                android:layout_height="50dp"
                                android:text="Leer" />
                        </LinearLayout>

                    </androidx.cardview.widget.CardView>


                    <androidx.cardview.widget.CardView
                        android:layout_width="380dp"
                        android:layout_height="252dp"
                        android:layout_gravity="center"
                        android:layout_marginTop="25dp"
                        android:background="#673AB7"
                        android:backgroundTint="#52673AB7"
                        app:cardCornerRadius="20dp">


                        <GridView
                            android:id="@+id/gridviewcap"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_marginTop="50dp"
                            android:cacheColorHint="@color/white"
                            android:gravity="end" />

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="45dp"
                            android:gravity="right"
                            android:orientation="vertical">

                            <TextView
                                android:id="@+id/textView6"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="15dp"
                                android:layout_marginRight="25dp"
                                android:gravity="right"
                                android:text="Vertodo"
                                android:textColor="@color/white" />


                        </LinearLayout>

                    </androidx.cardview.widget.CardView>


                    <androidx.cardview.widget.CardView
                        android:layout_width="380dp"
                        android:layout_height="252dp"
                        android:layout_gravity="center"
                        android:layout_marginTop="25dp"
                        android:layout_marginBottom="30dp"
                        android:background="#673AB7"
                        android:backgroundTint="#52673AB7"
                        app:cardCornerRadius="20dp">


                        <GridView
                            android:id="@+id/gridcomentario"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_marginTop="50dp"
                            android:cacheColorHint="@color/white"
                            android:foregroundTint="@color/white"
                            android:gravity="end"

                            />

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="45dp"
                            android:gravity="left"
                            android:orientation="vertical">

                            <TextView
                                android:id="@+id/textView10"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="10dp"
                                android:layout_marginTop="15dp"
                                android:gravity="left"
                                android:text="Comentarios"
                                android:textColor="@color/white" />


                        </LinearLayout>

                    </androidx.cardview.widget.CardView>

                </LinearLayout>


            </ScrollView>


        </LinearLayout>
    </LinearLayout>


</androidx.constraintlayout.widget.ConstraintLayout>